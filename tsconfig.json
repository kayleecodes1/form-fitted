{
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": true,
        "declarationDir": "./dist",
        "lib": ["es2015"],
        "module": "esnext",
        "noImplicitAny": true,
        "outDir": "./dist",
        "paths": {
            "@components/*": ["components/*"],
            "@contexts/*": ["contexts/*"],
            "@hooks/*": ["hooks/*"]
        },
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**.*.test.@(ts|tsx)"]
}
